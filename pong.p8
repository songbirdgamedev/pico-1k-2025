pico-8 cartridge // http://www.pico-8.com
version 43
__lua__
--pong

player_points = 0
comp_points = 0
scored = ""

function _init()
	--variables
	player = {
		x = 8,
		y = 63,
		c = 12,
		w = 2,
		h = 10,
		speed = 1
	}

	comp = {
		x = 117,
		y = 63,
		c = 8,
		w = 2,
		h = 10,
		speed = 0.75
	}

	ball = {
		x = 63,
		y = 63,
		c = 7,
		w = 2,
		dx = 0.6,
		dy = flr(rnd(2)) - 0.5,
		speed = 1,
		speedup = 0.05
	}

	--sound
	if scored == "player" then
		sfx(3)
	elseif scored == "comp" then
		sfx(4)
	else
		sfx(5)
	end

	--court
	c_left = 0
	c_right = 127
	c_top = 10
	c_bottom = 127

	--court line
	line_x = 63
	line_y = 10
	line_length = 4
end

function _update()
end

function _draw()
	cls()

	--court
	rect(c_left, c_top, c_right, c_bottom, 5)

	--dashed line
	repeat
		line(line_x, line_y, line_x, line_y + line_length, 5)
		line_y += line_length * 2
	until line_y > c_bottom
	line_y = c_top

	--ball

	--player

	--computer

	--scores
end

